<title>Edit Post</title>
<body id="page-top">

  <!-- Edit Post Section -->
  <section id="edit" class="login-section">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto text-center">
          <img src = "img/post.png" style="width:50px;height:50px;"></img>
          <h2 class="text-white mb-4">Edit Post</h2>
          <div style="color: #FFE300;">{{> messages}}</div>

          <form class="form-inline d-flex" enctype="multipart/form-data" action="/post/edit" method="POST">
            <input name="_id" type="hidden" value="{{item._id}}">
            <input name="image1" type="hidden" value="{{item.img}}" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0">

            <p><input   type="file"  name="image" accept="image/*" value="{{item.img}}"  id="file"  onchange="upload(this);" style="display: none;" ></p>
            <label type="button" class ="btn btn-primary btn-space mx-2" for="file" style="cursor: pointer; width: 715px;">Replace Image</label>

            <input name="header"  type="text"   value="{{item.header}}" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" id="title" placeholder="Title" >
            <textarea name="caption" type="text" cols="30" rows="10" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" style="width:800px">{{item.caption}}</textarea>
            <!--<input name = "funds" type="number" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" id="goal" placeholder="Target Funds (Optional)" style="width: 800px;">-->
            <input name = "tags"  type="text"   value="{{#item.tags}} {{.}} {{/item.tags}}" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" id="tags" style="width: 800px;">           
            <div id="donationinfo">
              Below are the accredited banks associated with this website. Atleast one donation channel must be filled out. Make sure that the Account Number and Account Name is correct. Otherwise, all donations may be lost.
            </div>
            <div id="donationForm">
              <img id="channelicon" src="../img/BDO.png" alt="">
              <input name= "BdoName" type="text" value="{{item.BDOaccName}}" placeholder="Account Name" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0"  style="width: 185px;">
              <input name= "BdoNum" type="text"value="{{item.BDOaccNum}}" placeholder="Account Num." class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" style="width: 185px;">
            </div>
            <div id="donationForm">
              <img id="channelicon" src="../img/BPI.png" alt="">
              <input name= "BpiName" type="text" value="{{item.BPIaccName}}" placeholder="Account Name" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" style="width: 185px;">
              <input name= "BpiNum" type="text" value="{{item.BPIaccNum}}" placeholder="Account Num." class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" style="width: 185px;">
            
            </div>
            <div id="donationForm">
              <img id="channelicon" src="../img/METROBANK.jpg" alt="">
              <input name= "MbName" type="text" value="{{item.MBaccName}}" placeholder="Account Name" class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" style="width: 185px;">
              <input name= "MbNum" type="text" value="{{item.MBaccNum}}" placeholder="Account Num." class="form-control flex-fill mr-auto mr-sm-2 mb-3 mb-sm-0" style="width: 185px;">
            
          </div>
            <button type="submit" class="btn btn-primary btn-space" style="margin:15px; margin-left:250px">Save</button>
            <a href="/profile#projects" class="btn btn-space btn-default" style="background-color: rgba(255, 86, 86, 0.809);margin:15px; margin-right:200px;"> <span style="color: white;">Cancel</span> </a>
          </form>
        </div>
      </div>
    </div>
  </section>

