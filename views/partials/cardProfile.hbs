{{#each item}}
<figure class="item1"><img src={{img}}>
    <h2>{{header}}</h2>
    <figcaption class="caption"> {{caption}}
    <p>{{tags}}</p>
    </figcaption>

    <div class="button" id="button-2" href="/post/edit/{{this._id}}">
        <div id="slide"></div>
        <a href="/post/edit/{{this._id}}" style="color: black;">Edit</a>
    </div> 

    <div class="button" id="button-2" href="/post/delete/{{this._id}}" data-toggle="modal" data-target="#myModalDelete">
        <div id="slide"></div>
        <a href="/post/delete/{{this._id}}" style="color: black;"  data-toggle="modal" data-target="#myModalDelete">Delete</a> 
    </div>
</figure>
{{/each}}

<div id="myModalDelete" class="modal fade" role="dialog">
  <div class="modal-dialog" >
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete Post?</h4>
      </div>
      <p style="margin-left: 20px; margin-top: 20px; margin-right:20px;">Are you sure you want to delete this post? Once deleted, you cannot undo your action.</p>
      <div class="modal-body">
        <form class="form-inline flex-column" action="/post/delete/{{this._id}}" method="POST">
          <input name="_id" type="hidden" value="{{item._id}}">
          <button type="submit" href="/post/delete/{{this._id}}" class="btn btn-primary" style="margin-bottom:10px">DELETE</button>
          <button type="submit" class ="btn btn-default" data-dismiss="modal">CANCEL</button>
        </form>
      </div>
      <div class="modal-footer"></div>
    </div>
  </div>
</div>