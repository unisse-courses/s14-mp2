{{#each item}}
<figure class="item1"><img src={{img}}>
    <h2>{{header}}</h2>
    <figcaption class="caption"> {{caption}}
    <p>{{tags}}</p>
    </figcaption>

    <div class="button" id="button-2" href="/post/edit/{{this._id}}">
        <div id="slide"></div>
        <a href="/post/edit/{{this._id}}" style="color: black;">Edit</a>
    </div> 

    <div class="button" id="button-2" href="/post/delete/{{this._id}}">
        <div id="slide"></div>
        <a href="/post/delete/{{this._id}}" style="color: black;">Delete</a> 
    </div>
</figure>
{{/each}}