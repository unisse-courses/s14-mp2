<title>My Profile</title>
<body id="page-top">
  
  <!-- About Me Section -->
  <section id="about" class="about-section">
    <div class="container">
      <div class="row">

        <div id="profpic">
          <img src = "{{dp}}"></img>
        </div>

        <div id="biosection" class="col-lg-8 mx-1"> 
          <div id="header"><h2 class="text-white mb-4">Hello {{username}}! </h2></div>
          <div id="bio">
            <p class="text-white mb-5"> {{bio}} </p>
                  <a type="button" class="btn btn-primary btn-space mx-auto" href="/profile/edit/{{this._id}}" style="float: right;" >Edit Profile</a>

          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Projects Section -->
  <section id="projects" class="projects-section bg-light text-center">

    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h2 class="text-black mb-4" style="padding-top:70px">My Projects</h2>
          <p class="text-black-50">Here is a list of your projects.</p>
        </div>
      </div>
    </div>  

    <div id="columns"  style="text-align: left;">
      {{> cardProfile }}
    </div>

    <!-- Create Post Section -->
    <div>
    </div>
    <a type="button" class="btn btn-primary btn-space mx-auto" href="/post/create">Create Post</a>

  </section>

  <!-- Subscribe Section -->
  <section id="signup" class="signup-section">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto text-center">
          <i class="far fa-paper-plane fa-2x mb-2 text-white"></i>
          <h2 class="text-white mb-5">Subscribe to receive updates!</h2>

          <form class="form-inline d-flex">
            <input type="email" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" id="inputEmail" placeholder="Enter email address...">
            <button type="submit" class="btn btn-primary mx-auto">Subscribe</button>
          </form>

        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section bg-black" id="contact">
    <div class="container">
      <div class="row">

        <div class="col-md-4 mb-3 mb-md-0">
          <div class="card py-4 h-100">
            <div class="card-body text-center">
              <i class="fas fa-map-marked-alt text-primary mb-2"></i>
              <h4 class="text-uppercase m-0">Address</h4>
              <hr class="my-4">
              <div class="small text-black-50">4923 Market Street, Orlando FL</div>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-3 mb-md-0">
          <div class="card py-4 h-100">
            <div class="card-body text-center">
              <i class="fas fa-envelope text-primary mb-2"></i>
              <h4 class="text-uppercase m-0">Email</h4>
              <hr class="my-4">
              <div class="small text-black-50">
                <a href="#">hello@yourdomain.com</a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-4 mb-3 mb-md-0">
          <div class="card py-4 h-100">
            <div class="card-body text-center">
              <i class="fas fa-mobile-alt text-primary mb-2"></i>
              <h4 class="text-uppercase m-0">Phone</h4>
              <hr class="my-4">
              <div class="small text-black-50">+1 (555) 902-8832</div>
            </div>
          </div>
        </div>
      </div>

      <div class="social d-flex justify-content-center">
        <a href="#" class="mx-2">
          <i class="fab fa-twitter"></i>
        </a>
        <a href="#" class="mx-2">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href="#" class="mx-2">
          <i class="fab fa-github"></i>
        </a>
      </div>

    </div>
  </section>

<script>
  function upload(myFile)
  {
    var image = document.createElement("img");
    var source = document.createAttribute("src");
    var file = myFile.files[0];  

    var filename = file.name;
    source.value = filename;
    image.setAttributeNode(source);

    $("#cont").append(image)	
  }
</script>