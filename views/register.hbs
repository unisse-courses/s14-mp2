<title>Register</title>
<body id="page-top">

  <!-- REGISTER Section -->
  <section id="login" class="login-section" style="height: 900px;">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-lg-8 mx-auto text-center">
          <img src = "img/register.png" style="width:85px;height:85px;"></img>
          <h2 class="text-white mb-3">Register</h2>
          <div style="color: #FFE300;">{{> messages}}</div>

          <form class="form-inline d-flex" style="float: left;" action="/register" method="POST">
            <input name="email"       id="email"       type="text"     class="form-control flex-fill mr-1 mr-sm-2 mb-3 mb-sm-0" style="width:600px" placeholder="Email">
            <input name="username"    id="username"    type="text"     class="form-control flex-fill mr-1 mr-sm-2 mb-3 mb-sm-0" style="width:600px" placeholder="Username">
            <input name="password"    id="password"    type="password" class="form-control flex-fill mr-2 mr-sm-2 mb-3 mb-sm-0" style="width:600px" placeholder="Password">
            <input name="confirmPass" id="confirmPass" type="password" class="form-control flex-fill mr-2 mr-sm-2 mb-3 mb-sm-0" style="width:600px" placeholder="Confirm Password">
            <button type="submit"     id="Register" class ="btn btn-primary  btn-space mx-auto" value="submit">Register</button>
          </form>          

          <a type="button"  style="color: azure;" id="reg" href="/login">Have an account? Click here.</a> 
        </div>
      </div>
    </div>
  </section>

